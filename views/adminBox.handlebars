<div id="live-chat">
	<header class="clearfix">
		<h4>{{userId}}</h4>
	</header>
	
	<div class="chat">

		<div class="chat-history">

			{{#each texts}}
				{{#if isAdmin}}
					<div class="chat-message clearfix">
						<div class="chat-message-content clearfix">			
							<h5>VENDOR_NAME</h5>
							<p>{{message}}</p>
							<span class="chat-time">{{formatDate time}}</span>
						</div>
					</div>
				<hr>
				{{else}}
				<div class="chat-message clearfix">
					
					<div class="chat-message-content clearfix">
						<h5>{{userId}}</h5>
						<p>{{message}}</p>
						<span class="chat-time">{{formatDate time}}</span>
					</div>
				</div>
				<hr>
				{{/if}}

			{{/each}}

		</div>

		<form id="msg" action="#" method="post">
			<fieldset >
				<input type="text" id="chatmsg" placeholder="Type your messageâ€¦" autofocus>
				<input type="submit" value="Enter">
			</fieldset>
		</form>
	
	</div>
</div>

